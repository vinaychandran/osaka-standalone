                    input#date_at.date_at(type='hidden')
            .time-selection
              section
                .form-group
                  .dropdown-custom
                    .input-custom
                      button 00:00
                      .popup-menu
                        .popup-content-input
                          ul.cities
                            li
                              span(target='Hokkaido', names='Hokkaido') 19:30
                            li
                              span(target='Okinawa', names='Okinawa') 20:00
                            li
                              span(target='Tochigi', names='Tochigi') 20:30
                            li
                              span(target='Tokyo', names='Tokyo') 21:00
